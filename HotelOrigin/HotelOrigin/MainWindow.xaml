<Window x:Class="HotelOrigin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelOrigin"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="240" Closing="Window_Closing">
    <Grid>
        <Button x:Name="buttonCustomerManagement" Content="Customer Management" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Click="buttonCustomerManagement_Click" Height="50"/>
        <Button x:Name="buttonRoomManagement" Content="Room Management" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="50" Width="200" Click="buttonRoomManagement_Click"/>
        <Button x:Name="buttonReservationManagement" Content="Reservation Management" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Height="50" Width="200" Click="buttonReservationManagement_Click" />
    </Grid>
</Window>
